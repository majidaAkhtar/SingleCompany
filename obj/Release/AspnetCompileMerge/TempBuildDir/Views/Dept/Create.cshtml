@model WMS.Models.Department

@{
    ViewBag.Title = "Create";
}
<div>
      <form class ="form-inline" role="form">
          <div class="form-group "> <h3>Add Department</h3> </div>
      </form>  
    </div>
 <hr />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.DeptName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DeptName,new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DeptName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DivID, "DivID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DivID",null,new { @class = "btn btn-default dropdown-toggle dropdown ComboBoxWidth"})
                @Html.ValidationMessageFor(model => model.DivID)
            </div>
        </div>

       <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default btn-success" />
                 @Html.ActionLink("Back to List", "Index",null,new { @class = "btn btn-primary " })
            </div>
        </div>
    </div>
}

